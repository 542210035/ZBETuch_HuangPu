<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_homepage_title_rl"
        >

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入无法完成的原因"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

    </RelativeLayout>

    <EditText
        android:gravity="top"
        android:background="@drawable/mark_bg"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/dialog_no_finish_et"
        android:layout_width="match_parent"
        android:layout_height="100dp" />


    <LinearLayout
        android:padding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_no_finish_ensure_btn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/button_selector"
            android:text="确定" />

        <Button
            android:id="@+id/dialog_no_finish_cancel_btn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_selector"
            android:text="取消" />


    </LinearLayout>
</LinearLayout>