<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/shape_homepage_title_rl"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        >

        <TextView
            android:id="@+id/dialog_inspector_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择负责人员"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:background="#94b6f1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="职 务"/>

            <ListView
                android:id="@+id/dialog_inspector_zhiwu_lv"
                android:layout_width="fill_parent"
                android:layout_height="300dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:padding="5dp"
                android:background="#7299fb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="会 议 人 员"/>

            <ListView
                android:id="@+id/dialog_inspector_person_lv"
                android:layout_width="fill_parent"
                android:layout_height="300dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_inspector_person_ensure_btn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/button_selector"
            android:text="确定" />

        <Button
            android:id="@+id/dialog_inspector_person_cancel_btn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_selector"
            android:text="取消" />


    </LinearLayout>

</LinearLayout>