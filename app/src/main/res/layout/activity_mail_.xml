<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.youli.zbetuch_huangpu.activity.Mail_Activity"
    xmlns:ptr="http://schemas.android.com/tools">

    <RelativeLayout
        android:background="@drawable/shape_homepage_title_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_margin="6dp"
            android:background="@drawable/xz"
            android:visibility="gone"
            />

        <TextView
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="@string/yjgl_title"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@drawable/title2"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:text="编号"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="发送者"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="发送时间"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="阅读状态"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="#000"
            />

    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_my_mail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#000000"
        android:divider="#19000000"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="true"
        android:smoothScrollbar="true"
        ptr:ptrAnimationStyle="rotate"/>

    <TextView
        android:id="@+id/tv_mail_yj"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="暂无数据"
        android:textSize="18dp"
        android:textColor="#000"
        android:gravity="center"
        android:visibility="gone"
        />

</LinearLayout>

