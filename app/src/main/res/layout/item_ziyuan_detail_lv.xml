<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >

    <LinearLayout
        android:padding="7.1dp"
        android:id="@+id/item_ziyuan_detail_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#666666"
            android:id="@+id/item_ziyuan_detail_num_tv"
            style="@style/gradeate_list_titletext"
            android:layout_width="40dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textColor="#666666"
            android:id="@+id/item_ziyuan_detail_name_tv"
            style="@style/gradeate_list_titletext"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            />

        <TextView
            android:textColor="#666666"
            android:id="@+id/item_ziyuan_detail_idcard_tv"
            style="@style/gradeate_list_titletext"
            android:layout_width="180dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            />


        <TextView
            android:textColor="#666666"
            android:id="@+id/item_ziyuan_detail_hkdz_tv"
            style="@style/gradeate_list_titletext"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            />

        <TextView
            android:textColor="#666666"
            android:id="@+id/item_ziyuan_detail_juwei_tv"
            style="@style/gradeate_list_titletext"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textColor="#666666"
            android:id="@+id/item_ziyuan_detail_jiezhiriqi_tv"
            style="@style/gradeate_list_titletext"
            android:layout_width="120dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            />

    </LinearLayout >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9C6C9"/>
</LinearLayout>