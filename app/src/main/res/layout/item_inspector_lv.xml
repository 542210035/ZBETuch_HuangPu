<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/item_inspector_ll">


    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#666666"
            android:id="@+id/item_inspector_number_tv"
            style="@style/resources_main_title"
            android:layout_weight="1"
            android:text="编号" />

        <TextView
            android:textColor="#666666"
            android:id="@+id/item_inspector_name_tv"
            style="@style/resources_main_title"
            android:layout_weight="3"
            android:text="工作名称" />

        <TextView
            android:textColor="#666666"

            android:id="@+id/item_inspector_create_time_tv"
            style="@style/resources_main_title"
            android:layout_weight="3"
            android:text="创建时间" />

        <TextView
            android:textColor="#666666"
            android:id="@+id/item_inspector_com_time_tv"
            style="@style/resources_main_title"
            android:layout_weight="3"
            android:text="完成时间" />

        <TextView
            android:textColor="#666666"
            android:paddingLeft="10dp"
            android:id="@+id/item_inspector_state_tv"
            style="@style/resources_main_title"
            android:layout_weight="2"
            android:text="完成状态" />



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9C6C9"/>
</LinearLayout>