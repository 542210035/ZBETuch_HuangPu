<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/item_fragment_bt_info_ll"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/tv_item_fragment_bt_info_no"
        android:textColor="#666666"
        android:paddingLeft="3dp"
        style="@style/resources_main_title"
        android:layout_weight="1"
        android:text="编号" />

    <TextView
        android:id="@+id/tv_item_fragment_bt_info_time"
        android:textColor="#666666"
        style="@style/resources_main_title"
        android:layout_weight="3"
        android:text="支付年月" />

    <TextView
        android:id="@+id/tv_item_fragment_bt_info_name"
        android:textColor="#666666"
        style="@style/resources_main_title"
        android:layout_weight="2"
        android:text="补贴项目名称" />

    <TextView
        android:id="@+id/tv_item_fragment_bt_info_money"
        android:textColor="#666666"
        style="@style/resources_main_title"
        android:layout_weight="3"
        android:text="补贴金额" />

    <TextView
        android:id="@+id/tv_item_fragment_bt_info_nature"
        android:textColor="#666666"
        style="@style/resources_main_title"
        android:layout_weight="2"
        android:text="补贴性质" />

</LinearLayout>