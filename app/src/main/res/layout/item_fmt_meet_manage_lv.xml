<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/item_meet_manage_ll">


    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#666666"
            android:id="@+id/item_meet_manage_number_tv"
            android:paddingLeft="3dp"
            style="@style/resources_main_title"
            android:layout_width="wrap_content"
            android:text="编号" />

        <TextView
            android:textColor="#666666"
            android:paddingLeft="25dp"
            android:id="@+id/item_meet_manage_theme_tv"
            style="@style/resources_main_title"
            android:layout_weight="3"
            android:text="会议主题" />

        <TextView
            android:textColor="#666666"
            android:paddingLeft="20dp"
            android:id="@+id/item_meet_manage_address_tv"
            style="@style/resources_main_title"
            android:layout_weight="3"
            android:text="会议地址" />

        <TextView
            android:textColor="#666666"
            android:paddingLeft="20dp"
            android:id="@+id/item_meet_manage_mtime_tv"
            style="@style/resources_main_title"
            android:layout_weight="3"
            android:text="会议时间" />

        <TextView
            android:textColor="#666666"
            android:paddingLeft="15dp"
            android:id="@+id/item_meet_manage_notifier_tv"
            style="@style/resources_main_title"
            android:layout_weight="2"
            android:text="通知人" />

        <TextView
            android:textColor="#666666"
            android:paddingLeft="15dp"
            android:id="@+id/item_meet_manage_rtime_tv"
            style="@style/resources_main_title"
            android:layout_weight="3"
            android:text="发布时间" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9C6C9"/>
</LinearLayout>