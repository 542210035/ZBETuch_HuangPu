<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/shape_homepage_title_rl"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        >

        <TextView
            android:id="@+id/dialog_inspector_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新建待办工作"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:text="工作名称:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/dialog_inspector_name_et"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp" />

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:text="完成时间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:id="@+id/dialog_inspector_time_tv"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp" />

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:text="负责人员:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:id="@+id/dialog_inspector_person_tv"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp" />

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:text="工作内容:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/dialog_inspector_content_et"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp" />

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_inspector_ensure_btn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/button_selector"
            android:text="确定" />

        <Button
            android:id="@+id/dialog_inspector_cancel_btn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_selector"
            android:text="取消" />


    </LinearLayout>

</LinearLayout>